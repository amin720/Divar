@using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html lang="fa" xml:lang="fa" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />

    <title>@ViewBag.Title</title>

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/css/icomoon.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/css/flexslider.css">

    <link href="~/css/New-car.css" rel="stylesheet" />
    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-rtl.min.css">
    <link href="~/css/bootstrap-slider.css" rel="stylesheet" />
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Gallary style  -->
    <link rel="stylesheet" href="~/css/gallaery.css">
    <link href="~/css/upload.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/font-awesome-4.6.3/css/fontawesome-all.min.css">

    <!-- Modernizr JS -->
    <script src="~/js/modernizr-2.6.2.min.js"></script>

    <link href="~/css/persianDatepicker-default.css" rel="stylesheet" />
    <link href="~/css/persianDatepicker-latoja.css" rel="stylesheet" />


    <!-- Theme style RTL -->
    <link rel="stylesheet" href="~/css/style.rtl.css">
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
        <script src="~/js/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="fh5co-loader"></div>

    <div id="page">
        <nav class="fh5co-nav" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-xs-3">
                        @if (Request.IsAuthenticated)
                    {
                        <div class="text-right">
                            خوش آمدید  @User.Identity.GetUserName() , <a href="@Url.Action("Logout","Account")" class="text-uppercase">خروج</a>
                        </div>}
                else
                {
                    <div class="text-right">
                        مهمان خوش آمدید , <a href="@Url.Action("Index","Account")" class="text-uppercase">ورود</a> | <a href="@Url.Action("Index","Account")" class="text-uppercase">ایجاد یک حساب کاربری جدید</a>
                    </div>}
                    </div>
                    <div class="col-md-6 col-xs-6 text-center menu-1">
                        <ul>
                            <li><a href="@Url.Action("Index","Home")" style="font-weight:bold">صفحه اصلی</a></li>
                            @if (Request.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("Index","Advertisement")" style="font-weight: bold; font-size: 1.22em;color: black">آگهی جدید ایجاد کنید</a></li>

                    }
                            <li><a href="@Url.Action("FQ","Home")" style="font-weight:bold">شرایط و راهنما</a></li>
                            <li><a href="@Url.Action("Contact","Home")" style="font-weight:bold">تماس با ما</a></li>
                        </ul>
                    </div>
                    <div class="col-md-2 col-xs-3 text-right hidden-xs menu-2">
                        <div id="fh5co-logo"><a href="@Url.Action("Index","Home")">اتوگالری</a>|<a href="/admin/admin/login" style="font-size: 0.75em;color: crimson">ورود ادمین</a></div>
                    </div>
                </div>

            </div>
        </nav>



        @RenderBody()




        <div class="gototop js-top">
            <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
        </div>
        @RenderSection("Modal", false);
        <!-- jQuery -->
        <script src="~/js/jquery.min.js"></script>
        <!-- jQuery Easing -->
        <script src="~/js/jquery.easing.1.3.js"></script>
        <!-- Bootstrap -->
        <script src="~/js/bootstrap.min.js"></script>
        <!-- Waypoints -->
        <script src="~/js/jquery.waypoints.min.js"></script>
        <!-- Carousel -->
        <script src="~/js/owl.carousel.min.js"></script>
        <!-- countTo -->
        <script src="~/js/jquery.countTo.js"></script>
        <!-- Flexslider -->
        <script src="~/js/jquery.flexslider-min.js"></script>
        <!-- Main -->
        <script src="~/js/main.js"></script>
        <!-- Gallery -->
        <script src="~/js/bootstrap-slider.js"></script>

        <script src="~/js/gallery.js"></script>
        <script src="~/js/upload.js"></script>

        <script src="~/js/persianDatepicker.min.js"></script>

        @RenderSection("DatePicker",false)
    </div>
</body>
</html>
